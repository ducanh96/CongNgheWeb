@model List<ShoppingMobile.Models.ModelDB.DienThoai>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ShopPage.cshtml";
}

<h2>Index</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">
            <div class="single-shop-product">
                <div class="product-upper">
                    <img src="@item.AnhDT" alt="@item.TenDienThoai" width="195" height="243"/>
                </div>
                <h2><a href="@Url.Action("Details","Shopping",new {id = item.MaDT })">@item.TenDienThoai</a></h2>
                <div class="product-carousel-price">
                    <ins>@String.Format("{0:0,0}", item.Gia) VNĐ</ins>
                </div>

                <div class="product-option-shop">
                    <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="@Url.Action("ThemVaoGioHang","GioHang",new {id = item.MaDT })">Add to cart</a>
                </div>
            </div>
        </div>

    }
   
   
</div>

<div class="row">
    <div class="col-md-12">
        <div class="product-pagination text-center">
            <nav>
                <ul class="pagination">
                    <li>
                        <a href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li>
                        <a href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>