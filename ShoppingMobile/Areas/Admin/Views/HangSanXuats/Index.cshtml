@model IEnumerable<ShoppingMobile.Models.ModelDB.HangSanXuat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    
}

<h2>Danh sách hãng sản xuất</h2>
<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Content/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $("#table_id").DataTable();
    })
</script>



<p>
    @Html.ActionLink("Create New", "Create")
</p>


<table class="table table-bordered table-striped table-responsive" id="table_id">
    <thead>
        <tr>
        
            <th>Tên hãng sản xuất</th>
            <th>Số lượng</th>
            <th>Action</th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenHSX</td>
                <td>@item.DienThoais.Count</td>
                <td>
                    <a href="@Url.Action("Edit",new {id = item.MaHSX })">Edit</a>
                  <label>|</label>
                    <a href="@Url.Action("Details",new {id = item.MaHSX })">Details</a>
                    <label>|</label>
                    <a href="@Url.Action("Delete",new {id = item.MaHSX })">Delete</a>
                </td>
               
            </tr>
        }

    </tbody>
</table>







