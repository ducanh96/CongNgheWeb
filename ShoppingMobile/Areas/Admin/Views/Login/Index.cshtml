@model ShoppingMobile.Models.ModelDB.Table_User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Augment an Admin Panel Category Flat Bootstrap Responsive Web Template | Login :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Augment Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
   
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/Admin/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <!-- Custom CSS -->
    <link href="~/Content/Admin/css/style.css" rel='stylesheet' type='text/css' />
    <!-- Graph CSS -->
    <link href="~/Content/Admin/css/font-awesome.css" rel="stylesheet">
    <!-- jQuery -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css'>
    <!-- lined-icons -->
    <link rel="stylesheet" href="~/Content/Admin/css/icon-font.min.css" type='text/css' />
    <!-- //lined-icons -->
    <script src="~/Content/Admin/js/jquery-1.10.2.min.js"></script>
    <!--clock init-->
</head>
<body>
    <!--/login-->

    <div class="error_page">
        <!--/login-top-->

        <div class="error-top">

                     <div class="alert alert-danger" role="alert" id="message" hidden="hidden">
                        @Html.ValidationMessage("errorPass")
                    </div>
       
   
            <h2 class="inner-tittle page">Augment</h2>
            <div class="login">
                <h3 class="inner-tittle t-inner">Login</h3>
               
                @using (Html.BeginForm())
                {
                  
                        <input name="UserName" type="text" class="text" placeholder="UserName">
                        @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                   
                  
                        <input name="UserPassword" type="password" placeholder="Password">
                        @Html.ValidationMessageFor(x => x.UserPassword, "", new { @class = "text-danger" })
                  
                    <div class="submit"><input type="submit" onclick="myFunction()" value="Login"></div>
                    <div class="clearfix"></div>

                    <div class="new">
                        <p><label class="checkbox11"><input type="checkbox" name="checkbox"><i> </i>Forgot Password ?</label></p>
                        <p class="sign">Do not have an account ? <a href="~/Login/Register">Register</a></p>
                        <div class="clearfix"></div>
                    </div>

                }
                   
              
            </div>


        </div>


        <!--//login-top-->
    </div>

    <!--//login-->
    <!--footer section start-->
    <div class="footer">
        <div class="error-btn">
            <a class="read fourth" href="index.html">Return to Home</a>
        </div>
        <p>&copy 2016 Augment . All Rights Reserved | Design by <a href="https://w3layouts.com/" target="_blank">W3layouts.</a></p>
    </div>
    <!--footer section end-->
    <!--/404-->
    <!--js -->
    <script src="~/Content/Admin/js/jquery.nicescroll.js"></script>
    <script src="~/Content/Admin/js/scripts.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/Admin/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            if ($("#message").children().text().length > 0)
            {
                $(this).removeAttr("hidden");
                $("#message").fadeIn(1000);
                $("#message").fadeOut(2000);

            }
            
        })
    </script>
</body>
</html>